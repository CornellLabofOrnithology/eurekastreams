<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:pager='urn:import:org.eurekastreams.web.client.ui.common.pager'>
  
  <ui:style type="org.eurekastreams.web.client.ui.pages.discover.DiscoverContent.DiscoverStyle">
	.discoverStreamList {
		border-top: 2px solid #bbb;
		list-style: none;
		padding-left: 0;
		width: 220px;
		float: left;
		margin-left: 10px;
		background-color: white;
	}
	
	.streamPager
	{
		background-color: #252525;
	}
	
	.discoveryPage
	{
		padding: 20px;
	}
	
	</ui:style>
  
    <g:HTMLPanel addStyleNames="{style.discoveryPage}">
        <div>
            <h3>Featured Streams</h3>
            <pager:PagerComposite addStyleNames="{style.streamPager}" ui:field="featuredStreamsComposite">
					</pager:PagerComposite>
        </div>
        <div>
        	<h3>Most Active Streams</h3>
            
        	<pager:PagerComposite addStyleNames="{style.streamPager}" ui:field="mostActiveStreamsComposite">
					</pager:PagerComposite>
        </div>
        
        <div>
        	What are you looking for? <g:FlowPanel ui:field="searchFlowPanel" />
        </div>
        
        <div class="{style.discoverStreamList}">
            <h3>Suggested</h3>
            <BR/>
            <g:FlowPanel ui:field="suggestedStreamsPanel" />
        </div>
        
        <div class="{style.discoverStreamList}">
            <h3>Most Viewed</h3>
            <BR/>
            <g:FlowPanel ui:field="mostViewedStreamsPanel"/>
        </div>
        
        <div class="{style.discoverStreamList}">
            <h3>Most Followed</h3>
            <BR/>
            <g:FlowPanel ui:field="mostFollowedStreamsPanel"/>
        </div>
        
        <div class="{style.discoverStreamList}">
            <h3>Most Recent</h3>
            <BR/>
            <g:FlowPanel ui:field="mostRecentStreamsPanel"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
