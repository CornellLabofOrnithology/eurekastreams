<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder' 
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:image field="buttonImage" src="style/images/sendNotification.png" />
<ui:image field="buttonImageDisabled" src="style/images/sendNotificationInactive.png" />

<ui:style type="org.eurekastreams.web.client.ui.common.notification.dialog.NotificationWidget.LocalStyle">
.highPriority
{
	border-right: 10px solid red;
}
.read
{
	background-color: #CCC;
}
.main
{
	padding: 5px;
	border-bottom: 1px solid #CCC;
}
.message-text
{
	overflow: hidden; 
}
.timestamp
{
	font-size: 11px;
	color: #666666;
}
</ui:style>

<ui:with field="coreCss" type="org.eurekastreams.web.client.ui.pages.master.CoreCss" />
<ui:with field="globalResources" type="org.eurekastreams.web.client.ui.pages.master.StaticResourceBundle" />

<g:HTMLPanel addStyleNames="{style.main}">
	<a>
		<g:Image ui:field="avatarUi "/>
		<div />
		<div />
		<div class="{style.message-text}" ui:field="messageTextUi" />
		<div class="{style.timestamp}" ui:field="timestampUi" />
	</a>
</g:HTMLPanel>
	
</ui:UiBinder>
