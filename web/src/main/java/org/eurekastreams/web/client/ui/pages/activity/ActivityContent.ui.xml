<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:ea='urn:import:org.eurekastreams.web.client.ui.common.autocomplete'>

	<ui:image field="activityHeaderBackground" src="style/images/activityHeaderBackground.png" />
	<ui:image field="hideDetails" src="style/images/hideDetailsBtn.png" />
	<ui:image field="viewDetails" src="style/images/viewDetailsBtn.png" />

	<ui:style type="org.eurekastreams.web.client.ui.pages.activity.ActivityContent.ActivityStyle">
		.main
		{
			overflow: hidden;
			margin-top: 40px;
		}

		.stream-option-list {
			border-top: 2px solid #bbb;
			list-style: none;
			padding-left: 0;
			width:
			220px;
			float: left;
			clear: left;
			margin-left: 10px;
		}

		.stream-container-panel {
			float: right;
			width: 730px;
			margin-right: 10px;
		}
		
		.stream-panel {
			background-color: white;
			clear: both;
			border: 1px solid #c6c6c6;
			border-top-width: 0;
		}		
		
		.stream-option-list li a
		{
			display: block;
			border-bottom: 1px solid #bbb;
			height: 24px;
			padding-top: 9px;
			padding-left: 5px;
			color: #000;
		}

		.stream-option-list li a:hover
		{
			background-image: url(style/images/activeBackground.png);		
			color: #000;
		}		
		
		.stream-avatar
		{
			background-image: url(style/images/avatarBackground.png);		
			float: left;
			padding: 5px;
			margin: 10px;
		}
		
		.stream-avatar > img
		 {
		 	padding: 0px;
		 	border: none;
		 }
		
		.person-avatar
		{
			float: left;
		}
		
		.activeSort
		{
			background-image: url(style/images/activeBackground.png);		
		}
		
		.post-container
		{
			padding: 10px;
			background-color: #e4e4e4;
			border-left: 1px solid #c6c6c6;
			border-right: 1px solid #c6c6c6;
			overflow: hidden;
		}
		
		.options-panel
		{
			background-color: white;
			padding: 1px;
			border: 1px solid #c6c6c6;
			overflow: hidden;
		}
		
		.sort-option, .sort-option:hover, .sort-option:link, .sort-option:active, .sort-option:visited
		{
			height: 19px;
			padding: 7px 10px;
			float: left;
			color: black;
		}
		
		.sort-option:hover
		{
			color: black;
		}
		
		.post-box
		{
			border: 1px solid #c6c6c6;
			width: 100%;
			overflow: hidden;
			padding: 5px;
		}
		
		.post-box-container
		{
			margin-left: 70px;
			margin-right: 10px;
		}
		
		@sprite .header {
			gwt-image: "activityHeaderBackground";
			position: relative;
			color: white;
		}
		
		.stream-info-container
		{
			float: left;
			margin-left: 20px;
			margin: 10px;
		}
		
		.follow-info-container
		{
			margin: 10px;
			float: right;
			text-align: center;
		}
		
		.follow-info-link, .follow-info-link:hover {
			color: #3AB0EF;
			display: block;
		}
		
		.stream-name
		{
			display: block;
			height: 16px;
			font-weight: bold;
		}
		
		.stream-details-container
		{
			height: 0;
			background-color: black;
		}
		
		.toggle-details-link
		{
			clear: right;
			float: right;
			text-indent: 1000em;
			overflow: hidden;
			position: absolute;
			bottom: 0;
			right: 0;
			cursor: pointer;
		}
		
		@sprite .view-details
		{
			gwt-image: "viewDetails";
		}

	</ui:style>

	<g:HTMLPanel addStyleNames="{style.main}">
		<g:HTMLPanel addStyleNames="{style.stream-container-panel}" ui:field="streamContainerPanel">
			<div class="{style.header}">
				<g:HTMLPanel addStyleNames="{style.stream-avatar}"  ui:field="streamAvatar">
				</g:HTMLPanel>
				<div class="{style.stream-info-container}">
					<span class="{style.stream-name}" ui:field="streamName"></span>
					<span ui:field="streamMeta"></span>
				</div>
				<div class="{style.follow-info-container}">
					<span ui:field="followerCount"></span>
					<g:Anchor addStyleNames="{style.follow-info-link}" ui:field="showFollowers">Followers</g:Anchor>
				</div>
				<div class="{style.follow-info-container}">
					<span ui:field="followingCount"></span>
					<g:Anchor addStyleNames="{style.follow-info-link}" ui:field="showFollowing">Following</g:Anchor>
				</div>
				<g:Anchor addStyleNames="{style.toggle-details-link} {style.view-details}" ui:field="toggleDetails">Details</g:Anchor>				
			</div>
			<div class="{style.stream-details-container}" ui:field="streamDetailsContainer">
				<g:HTMLPanel ui:field="analyticsChartContainer">
				</g:HTMLPanel>			
			</div>
			<div class="{style.post-container}" ui:field="postPanel">
				<g:HTMLPanel addStyleNames="{style.person-avatar}" ui:field="posterAvatar">
				</g:HTMLPanel>
				<div class="{style.post-box-container}">
					<ea:ExtendedTextArea addStyleNames="{style.post-box}" ui:field="postBox"></ea:ExtendedTextArea>
				</div>
			</div>
			<div class="{style.options-panel}">
				<g:Anchor addStyleNames="{style.sort-option} {style.activeSort}" ui:field="recentSort">Recent</g:Anchor>
				<g:Anchor addStyleNames="{style.sort-option}" ui:field="popularSort">Popular</g:Anchor>
				<g:Anchor addStyleNames="{style.sort-option}" ui:field="activeSort">Active</g:Anchor>
			</div>			
			<g:HTMLPanel addStyleNames="{style.stream-panel}" ui:field="streamPanel">
			</g:HTMLPanel>
		</g:HTMLPanel>
	
		<ul class="{style.stream-option-list}" ui:field="defaultList">
		</ul>

		<ul class="{style.stream-option-list}" ui:field="bookmarkList">
		</ul>

		<ul class="{style.stream-option-list}" ui:field="filterList">
		</ul>
	</g:HTMLPanel>

</ui:UiBinder>
