<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:pager='urn:import:org.eurekastreams.web.client.ui.common.pager'>

	<ui:image field="activityHeaderBackground" src="style/images/activityHeaderBackground.png" />
	<ui:image field="hideDetails" src="style/images/hideDetailsBtn.png" />
	<ui:image field="viewDetails" src="style/images/viewDetailsBtn.png" />

	<ui:image field="followBtn" src="style/images/followBtn.png" />
	<ui:image field="followBtnHover" src="style/images/followBtnHover.png" />

	<ui:image field="unFollowBtn" src="style/images/stopFollowBtn.png" />

	<ui:image field="everyoneHeader" src="style/images/everyoneHeader.png" />
	<ui:image field="followingHeader" src="style/images/followingHeader.png" />

	<ui:style
		type="org.eurekastreams.web.client.ui.common.widgets.activity.StreamDetailsComposite.StreamDetailsStyle">
		.analyticsChartContainer {
		float: right;
		margin: 10px;
		}

		.analyticsChartContainer > div {
		padding-top: 10px;
		}

		.stream-details
		{
		clear: left;
		float: left;
		margin: 0
		10px;
		width: 200px;
		}

		.stream-details-options
		{
		background-color: #111111;
		border-bottom: 1px
		solid #404040;
		border-top: 1px solid #404040;
		height:
		37px;
		}

		.stream-avatar
		{
		background-image:
		url(style/images/avatarBackground.png);
		float: left;
		padding: 5px;
		margin: 10px;
		}

		.stream-avatar > img
		{
		padding: 0px;
		border:
		none;
		}


		.stream-details-options > div
		{
		color: white;
		display: block;
		float: left;
		height: 27px;
		margin: 10px 0 10px
		10px;
		padding: 0 10px;
		cursor: pointer;
		}
		
		.activeOption
		{
		background-image: url("style/images/subFilterBackground.png");
		}

		.stream-details-container
		{
		height: 0;
		background-color: #252525;
		overflow: hidden;
		color: white;
		position:
		relative;
		top: -1px;
		}

		.stream-details-container h2
		{
		font-weight: bold;
		height: 16px;
		}

		@sprite .followLink
		{
		margin-top: 10px;
		gwt-image: "followBtn";
		cursor: pointer;
		}
		
		@sprite .followLink:hover
		{
		gwt-image: "followBtnHover";
		}
		
		@sprite .unFollowLink
		{
		gwt-image: "unFollowBtn";
		}		

		@sprite .unFollowLink:hover
		{
		gwt-image: "unFollowBtn";
		}
		
		.configureLink
		{
		display: block;		
		margin-top: 10px;
		}

		.condensedStream .toggle-details-link, .condensedStream .follow-info-container,
		.condensedStream .stream-meta, .condensedStream .stream-avatar,
		.condensedStream .followLink, .condensedStream .configureLink
		{
		display: none;
		}

		.condensedStream .header
		{
		height: 77px;
		}

		.condensedAvatar
		{
		display: none;
		float: left;
		padding: 5px;
		margin: 10px;
		}

		@sprite .condensedStream .condensedAvatar
		{
		gwt-image: "everyoneHeader";
		display: block;
		}


		@sprite .header {
		gwt-image: "activityHeaderBackground";
		position:
		relative;
		color: white;
		}

		.stream-info-container
		{
		float: left;
		margin-left: 20px;
		margin: 10px;
		}

		.follow-info-container
		{
		margin: 10px;
		float: right;
		text-align: center;
		}

		.follow-info-link
		{
		color: #0066CC;
		display: block;
		cursor: pointer;
		}

		.stream-name
		{
		display: block;
		font-weight: bold;
		font-size: 24px;
		}

		.toggle-details-link
		{
		clear: right;
		float: right;
		text-indent: 1000em;
		overflow: hidden;
		position: absolute;
		bottom: 0;
		right: 0;
		cursor: pointer;
		z-index: 10;
		}

		@sprite .view-details
		{
		gwt-image: "viewDetails";
		}
		
		.stream-details-content 
		{
			overflow: hidden;
			width: 100%;
		}
		
	</ui:style>

	<g:HTMLPanel>
		<div class="{style.header}">
			<div class="{style.condensedAvatar}"></div>
			<g:HTMLPanel addStyleNames="{style.stream-avatar}"
				ui:field="streamAvatar">
			</g:HTMLPanel>
			<div class="{style.stream-info-container}">
				<span class="{style.stream-name}" ui:field="streamName"></span>
				<span class="{style.stream-meta}" ui:field="streamMeta"></span>
				<g:Label addStyleNames="{style.followLink}" ui:field="followLink"></g:Label>
				<g:Anchor addStyleNames="{style.configureLink}" ui:field="configureLink">Configure</g:Anchor>
			</div>
			<div class="{style.follow-info-container}">
				<span ui:field="followerCount"></span>
				<g:Label addStyleNames="{style.follow-info-link}"
					ui:field="showFollowers">
					Followers</g:Label>
			</div>
			<div class="{style.follow-info-container}">
				<span ui:field="followingCount"></span>
				<g:Label addStyleNames="{style.follow-info-link}"
					ui:field="showFollowing">
					Following</g:Label>
			</div>
			<g:Anchor addStyleNames="{style.toggle-details-link} {style.view-details}"
				ui:field="toggleDetails">Details</g:Anchor>
		</div>
		<div class="{style.stream-details-container}" ui:field="streamDetailsContainer">
			<div class="{style.stream-details-options}">
				<g:Label ui:field="aboutLink">About</g:Label>
				<g:Label ui:field="followersLink">Followers</g:Label>
				<g:Label ui:field="followingLink">Following</g:Label>
			</div>
			<div class="{style.stream-details-content}">
				<g:HTMLPanel ui:field="streamAbout">
					<div class="{style.stream-details}">
						<h2>Description</h2>
						<div ui:field="streamDescription"></div>
						<h2>Interests</h2>
						<div ui:field="streamInterests"></div>
						<h2>Popular Hashtags</h2>
						<div ui:field="streamHashtags"></div>
					</div>
					<g:HTMLPanel addStyleNames="{style.analyticsChartContainer}"
						ui:field="analyticsChartContainer">
					</g:HTMLPanel>
				</g:HTMLPanel>
				<pager:PagerComposite ui:field="streamFollowers">
				</pager:PagerComposite>
				<pager:PagerComposite ui:field="streamFollowing">
				</pager:PagerComposite>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
	