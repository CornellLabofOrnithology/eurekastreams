<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE urlrewrite 
    PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN" 
    "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">

<urlrewrite>

	<rule>
		<name>IB: Convert from /action: to Application HTML</name>
		<from>^/actions/(.*)$</from>
		<to last="true">/index.html</to>
	</rule>
	
	<rule>
		<name>IB: Convert from /requestaccess to Application HTML</name>
		<from>^/requestaccess(.*)$</from>
